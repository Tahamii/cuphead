<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cupheadProject.View.ProfileMenuController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../css/style.css">
    <center>
        <VBox spacing="10" alignment="CENTER" maxWidth="350">
            <Text id="title" text="User Settings"/>
            <Label text="New Username"/>
            <TextField fx:id="newUsername" promptText="enter your new username"/>
            <Label text="New Password"/>
            <TextField fx:id="newPassword" promptText="enter your new password"/>
            <Button text="update user info" styleClass="secondary-btn" onMouseClicked="#updateInfo"/>
        </VBox>
    </center>

</BorderPane>
